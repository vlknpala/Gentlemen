@model IEnumerable<Gentlemen.Models.Blog>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Blog Yazıları Yönetimi</h2>
        <a asp-action="CreateBlog" class="btn btn-primary">Yeni Blog Yazısı Ekle</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Başlık</th>
                    <th>Kategori</th>
                    <th>Yazar</th>
                    <th>Yayın Tarihi</th>
                    <th>Görüntülenme</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var blog in Model)
                {
                    <tr>
                        <td>@blog.Title</td>
                        <td>@blog.Category</td>
                        <td>@blog.Author</td>
                        <td>@blog.PublishDate.ToShortDateString()</td>
                        <td>@blog.ViewCount</td>
                        <td>
                            <a asp-action="EditBlog" asp-route-id="@blog.Id" class="btn btn-sm btn-info">Düzenle</a>
                            <button onclick="deleteBlog(@blog.Id)" class="btn btn-sm btn-danger">Sil</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        function deleteBlog(id) {
            if (confirm('Bu blog yazısını silmek istediğinizden emin misiniz?')) {
                $.post('/Admin/DeleteBlog/' + id, function(response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        alert('Blog silinirken bir hata oluştu: ' + response.message);
                    }
                });
            }
        }
    </script>
} 