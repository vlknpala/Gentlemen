@model IEnumerable<Gentlemen.Models.Category>

@{
    ViewData["Title"] = "Kategori Yönetimi";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Kategori Yönetimi</h1>
        <a asp-action="CreateCategory" class="btn btn-primary">
            <i class="fas fa-plus"></i> Yeni Kategori Ekle
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Tüm Kategoriler</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped" id="categoriesTable">
                    <thead>
                        <tr>
                            <th>Görsel</th>
                            <th>Ad</th>
                            <th>Açıklama</th>
                            <th>Tip</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@category.ImageUrl" alt="@category.Name" style="width: 50px; height: 50px; object-fit: cover;" />
                                </td>
                                <td>@category.Name</td>
                                <td>@category.Description</td>
                                <td>@category.Type</td>
                                <td>
                                    @if (category.IsActive)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Pasif</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="CategoryContents" asp-route-id="@category.Id" class="btn btn-info btn-sm">
                                            <i class="fas fa-list"></i> İçerikler
                                        </a>
                                        <a asp-action="EditCategory" asp-route-id="@category.Id" class="btn btn-primary btn-sm">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form asp-action="DeleteCategory" asp-route-id="@category.Id" method="post" class="d-inline" onsubmit="return confirm('Bu kategoriyi silmek istediğinizden emin misiniz?');">
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#categoriesTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Turkish.json"
                },
                "order": [[1, "asc"]] // Ad sütununa göre sırala
            });

            // 3 saniye sonra alert'leri otomatik kapat
            setTimeout(function() {
                $('.alert').alert('close');
            }, 3000);
        });
    </script>
} 