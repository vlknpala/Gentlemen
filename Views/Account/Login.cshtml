@model LoginViewModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">@ViewData["Title"]</h2>

                    <form asp-action="Login" method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label">E-posta</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Şifre</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary">Giriş Yap</button>
                        </div>
                    </form>

                    <div class="text-center mb-3">
                        <p class="text-muted">veya</p>
                    </div>

                    <div class="d-grid">
                        <a asp-action="GoogleLogin" class="btn btn-warning btn-lg" style="background-color: #ffc107; border-color: #ffc107; color: #000;">
                            <i class="fab fa-google me-2"></i> Google ile Devam Et
                        </a>
                    </div>

                    <div class="text-center mt-3">
                        <p>Hesabınız yok mu? <a asp-action="Register">Kayıt Ol</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-font-awesome-kit.js"></script>
} 