@model Gentlemen.Models.Category

@{
    ViewData["Title"] = "Yeni Kategori";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="section-title">Yeni Kategori</h1>
        <a asp-action="Index" class="btn btn-secondary" aria-label="Geri Dön">
            <i class="fas fa-arrow-left" aria-hidden="true"></i> Geri Dön
        </a>
    </div>

    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-body">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <h5>Lütfen aşağıdaki hataları düzeltin:</h5>
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    <form asp-action="Create" method="post" enctype="multipart/form-data" role="form">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label required">Kategori Adı</label>
                            <input asp-for="Name" class="form-control" required 
                                   placeholder="Kategori adını girin" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label required">Açıklama</label>
                            <textarea asp-for="Description" class="form-control" rows="3" required 
                                    placeholder="Kategori açıklamasını girin"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Type" class="form-label required">Kategori Tipi</label>
                            <select asp-for="Type" class="form-select" required>
                                <option value="">Kategori tipi seçin</option>
                                <option value="Business">İş Stili</option>
                                <option value="Casual">Günlük Stil</option>
                                <option value="Special">Özel Günler</option>
                            </select>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="categoryImage" class="form-label required">Kategori Görseli</label>
                            <input type="file" id="categoryImage" name="Image" class="form-control" 
                                   accept="image/*" required />
                            <div id="imageError" class="text-danger"></div>
                            <div class="mt-2">
                                <img id="imagePreview" src="#" alt="" style="max-width: 200px; display: none;">
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" checked>
                                <label class="form-check-label" for="IsActive">Aktif</label>
                            </div>
                        </div>

                        <div class="text-end">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save" aria-hidden="true"></i> Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .required:after {
            content: " *";
            color: red;
        }
    </style>
}

@section Scripts {
    <script>
        // Görsel önizleme ve doğrulama
        document.querySelector('#categoryImage').addEventListener('change', function(e) {
            const file = e.target.files[0];
            const imageError = document.querySelector('#imageError');
            const preview = document.querySelector('#imagePreview');
            
            imageError.textContent = '';
            preview.style.display = 'none';
            
            if (file) {
                // Dosya boyutu kontrolü (5MB)
                if (file.size > 5 * 1024 * 1024) {
                    imageError.textContent = 'Görsel boyutu 5MB\'dan küçük olmalıdır.';
                    this.value = '';
                    return;
                }
                
                // Dosya tipi kontrolü
                if (!file.type.startsWith('image/')) {
                    imageError.textContent = 'Lütfen geçerli bir görsel dosyası seçin.';
                    this.value = '';
                    return;
                }
                
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                    preview.alt = file.name;
                }
                reader.readAsDataURL(file);
            }
        });
    </script>
    
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 