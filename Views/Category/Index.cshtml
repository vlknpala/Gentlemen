@model IEnumerable<Gentlemen.Models.Category>

@{
    ViewData["Title"] = "Kategoriler";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="section-title">Kategoriler</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Yeni Kategori
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model?.Any() ?? true)
    {
        <div class="alert alert-primary text-center p-5 mb-4">
            <i class="fas fa-info-circle fa-2x mb-3"></i>
            <h4>Henüz Kategori Eklenmemiş</h4>
            <p class="mb-0">İlk kategoriyi eklemek için "Yeni Kategori" butonuna tıklayın.</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var category in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        @if (!string.IsNullOrEmpty(category.ImageUrl))
                        {
                            <img src="@category.ImageUrl" class="card-img-top" alt="@category.Name" style="height: 200px; object-fit: cover;">
                        }
                        <div class="card-body">
                            <h5 class="card-title">@category.Name</h5>
                            <p class="card-text">@category.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge bg-primary">@category.Type</span>
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-edit"></i> Düzenle
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@category.Id" method="post" 
                                          onsubmit="return confirm('Bu kategoriyi silmek istediğinizden emin misiniz?')" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i> Sil
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">
                                Durum: @(category.IsActive ? "Aktif" : "Pasif")
                            </small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        // 3 saniye sonra alertleri otomatik kapat
        setTimeout(function() {
            $('.alert').alert('close');
        }, 3000);
    </script>
} 