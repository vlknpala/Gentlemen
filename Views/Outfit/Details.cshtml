@model Gentlemen.Models.Outfit

@{
    ViewData["Title"] = Model.Title;
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-6 mb-4 mb-lg-0">
            <div class="outfit-image-container position-relative">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="img-fluid rounded shadow" alt="@Model.Title">
                    <div class="position-absolute top-0 end-0 m-3">
                        <button class="btn btn-outline-danger rounded-circle p-2 like-button" data-outfit-id="@Model.Id">
                            <i class="fas fa-heart"></i> <span class="like-count">@Model.Likes</span>
                        </button>
                    </div>
                }
            </div>
        </div>
        <div class="col-lg-6">
            <h1 class="display-5 fw-bold mb-4">@Model.Title</h1>

            <div class="outfit-meta mb-4">
                <span class="badge bg-primary me-2 p-2">@Model.Season</span>
                <span class="badge bg-secondary me-2 p-2">@Model.Style</span>
                @if (!string.IsNullOrEmpty(Model.Occasion))
                {
                    <span class="badge bg-success p-2">@Model.Occasion</span>
                }
            </div>

            <div class="description mb-4">
                <h5 class="text-primary fw-bold">Açıklama</h5>
                <p class="lead">@Model.Description</p>
            </div>

            <div class="price-section mb-4">
                <h5 class="text-primary fw-bold">Tahmini Fiyat</h5>
                <h3 class="display-6 fw-bold text-success">@Model.EstimatedPrice.ToString("C")</h3>
            </div>

            <div class="clothing-items mb-4">
                <h5 class="text-primary fw-bold">Parçalar</h5>
                <div class="card shadow-sm">
                    <ul class="list-group list-group-flush">
                        @foreach (var item in Model.ClothingItems)
                        {
                            <li class="list-group-item d-flex align-items-center">
                                <i class="fas fa-tshirt me-2 text-secondary"></i>
                                @item
                            </li>
                        }
                    </ul>
                </div>
            </div>

            <div class="actions d-flex flex-wrap gap-2 mb-4">
                <button class="btn btn-primary btn-lg">
                    <i class="fas fa-shopping-cart me-2"></i> Satın Al
                </button>
                <button class="btn btn-outline-secondary btn-lg" onclick="window.print()">
                    <i class="fas fa-print me-2"></i> Yazdır
                </button>
            </div>

            <div class="share-section">
                <h5 class="text-primary fw-bold">Bu Kombini Paylaş</h5>
                <div class="social-share d-flex gap-2">
                    <a href="#" class="btn btn-outline-primary">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#" class="btn btn-outline-info">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a href="#" class="btn btn-outline-success">
                        <i class="fab fa-whatsapp"></i>
                    </a>
                    <a href="#" class="btn btn-outline-secondary">
                        <i class="fab fa-pinterest"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="related-outfits mt-5">
        <h3 class="text-center mb-4 fw-bold">Benzer Kombinler</h3>
        <div class="row">
            <!-- Burada benzer kombinler gösterilebilir -->
            <div class="col-12 text-center mt-3">
                <a href="@Url.Action("Index")" class="btn btn-outline-primary">Tüm Kombinleri Gör</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.like-button').click(function () {
                var button = $(this);
                var outfitId = button.data('outfit-id');

                $.post('/Outfit/Like/' + outfitId, function (response) {
                    if (response.success) {
                        button.find('.like-count').text(response.likes);
                        button.addClass('btn-danger').removeClass('btn-outline-danger');
                    }
                });
            });
        });
    </script>
    <style>
        .outfit-image-container {
            overflow: hidden;
            border-radius: 8px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        .outfit-image-container img {
            transition: transform 0.5s ease;
        }

        .outfit-image-container:hover img {
            transform: scale(1.03);
        }

        .badge {
            font-size: 0.9rem;
        }

        .social-share .btn {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
        }
    </style>
}
